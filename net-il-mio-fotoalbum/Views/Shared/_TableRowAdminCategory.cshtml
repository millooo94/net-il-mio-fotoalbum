@model Category

@{
    var category = Model;
}

<tr>
    <td>@category.Id</td>
    <td>
        <a href="@Url.Action("Detail", "Category", new { Id = category.Id })">@category.Name</a>
    </td>
    <td>
        <a href="@Url.Action("Update", "Category", new { Id = category.Id })" class="btn btn-warning">Edit</a>
        <form asp-action="Delete" asp-controller="Category" asp-route-id="@category.Id">
            @Html.AntiForgeryToken()
            <button type="submit" class="btn btn-danger">Delete</button>
        </form>
    </td>
</tr>